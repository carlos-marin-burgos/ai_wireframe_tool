# Vite Optimization Settings for macOS
# Add these to your shell profile (~/.zshrc or ~/.bash_profile)

# Increase file descriptor limits (helps with file watching)
ulimit -n 10240

# Node.js memory optimization
export NODE_OPTIONS="--max-old-space-size=4096"

# Vite specific optimizations
export VITE_CJS_TRACE=true
export VITE_CJS_IGNORE_WARNING=true

# Development environment variables
export DESIGNETICA_BACKEND_PORT=7071
export DESIGNETICA_FRONTEND_PORT=5173

echo "ðŸ’¡ To apply these optimizations permanently, add the above lines to your ~/.zshrc file"
echo "ðŸ’¡ Then run: source ~/.zshrc"